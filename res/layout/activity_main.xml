<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

  <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Hello World, MainActivity" />


  <Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Sign In to Facebook"
    android:onClick="onSignInWithFacebookClick" />

  <Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Sign In to Deezer"
    android:onClick="onSignInWithDeezerClick" />

  <Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Sign In to Withings"
    android:onClick="onSignInWithWithingsClick" />

  <Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Select your event"
    android:onClick="onSelectFacebookEventClick" />

</LinearLayout>

